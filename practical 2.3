<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List Filter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        select {
            margin-bottom: 20px;
            padding: 5px 10px;
            font-size: 16px;
        }
        .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }
        .product {
            border: 1px solid #ddd;
            padding: 10px;
            width: 200px;
            text-align: center;
            border-radius: 5px;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
        }
        .product img {
            max-width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 5px;
        }
        .hidden {
            display: none;
        }
    </style>
</head>
<body>

    <h1>Product List</h1>

    <label for="categoryFilter">Filter by Category:</label>
    <select id="categoryFilter">
        <option value="all">All</option>
        <option value="electronics">Electronics</option>
        <option value="clothing">Clothing</option>
        <option value="books">Books</option>
    </select>

    <div class="product-list" id="productList">
        <div class="product" data-category="electronics">
            <img src="https://via.placeholder.com/200x150?text=Phone" alt="Phone">
            <h3>Smartphone</h3>
            <p>$500</p>
        </div>
        <div class="product" data-category="clothing">
            <img src="https://via.placeholder.com/200x150?text=T-Shirt" alt="T-Shirt">
            <h3>T-Shirt</h3>
            <p>$20</p>
        </div>
        <div class="product" data-category="books">
            <img src="https://via.placeholder.com/200x150?text=Book" alt="Book">
            <h3>Novel</h3>
            <p>$15</p>
        </div>
        <div class="product" data-category="electronics">
            <img src="https://via.placeholder.com/200x150?text=Laptop" alt="Laptop">
            <h3>Laptop</h3>
            <p>$1200</p>
        </div>
        <div class="product" data-category="clothing">
            <img src="https://via.placeholder.com/200x150?text=Jeans" alt="Jeans">
            <h3>Jeans</h3>
            <p>$40</p>
        </div>
    </div>

    <script>
        const categoryFilter = document.getElementById('categoryFilter');
        const products = document.querySelectorAll('.product');

        categoryFilter.addEventListener('change', () => {
            const selectedCategory = categoryFilter.value;

            products.forEach(product => {
                if (selectedCategory === 'all' || product.dataset.category === selectedCategory) {
                    product.classList.remove('hidden');
                } else {
                    product.classList.add('hidden');
                }
            });
        });
    </script>

</body>
</html>
